<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="com.yet.spring.core.logger.ConsoleEventLogger" />

    <bean id="fileLogger" class="com.yet.spring.core.logger.FileEventLogger" init-method="init" >
        <constructor-arg value="log.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="com.yet.spring.core.logger.CacheFileEventLogger" parent="fileLogger" destroy-method="destroy">
        <constructor-arg name="cacheSize" value="1"/>
    </bean>
</beans>