<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.yet.spring.core.bean.Client">
        <constructor-arg index="0" value="1" />
        <constructor-arg value="John Smith" />
    </bean>

    <bean id="eventLogger" class="com.yet.spring.core.logger.ConsoleEventLogger" />

    <bean id="app" class="com.yet.spring.core.App">
        <constructor-arg ref="client" />
        <constructor-arg ref="cacheFileLogger" />
    </bean>

    <bean id="event" class="com.yet.spring.core.bean.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="fileLogger" class="com.yet.spring.core.logger.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="com.yet.spring.core.logger.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg name="fileName" value="log.txt"/>
        <constructor-arg name="cacheSize" value="1"/>
    </bean>
</beans>